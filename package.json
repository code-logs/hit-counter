{
  "name": "hit-counter",
  "version": "1.0.0",
  "main": "dist/app.js",
  "repository": "git@github.com:code-logs/hit-counter",
  "author": "Jay Lee <jaylee.possible@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc",
    "serve": "NODE_ENV=development nodemon --watch src --exec 'node --inspect -r ts-node/register ./src/app.ts'",
    "start": "NODE_ENV=production node ./dist/app.js",
    "typecheck": "tsc --noEmit --esModuleInterop --experimentalDecorators --emitDecoratorMetadata",
    "prettier": "prettier -w ./src/**/*",
    "eslint": "eslint ./src/**/*",
    "prepare": "husky install",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "test": "NODE_ENV=production jest --detectOpenHandles --forceExit"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "mysql": "^2.14.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "ts-node": "^10.6.0",
    "typeorm": "0.2.44"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "jest": "^27.5.1",
    "lint-staged": ">=10",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run test",
      "npm run typecheck",
      "eslint --cache --fix"
    ],
    "*.{ts,js,css,md,json}": "prettier --write"
  }
}
