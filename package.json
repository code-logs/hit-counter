{
  "name": "hit-counter",
  "version": "0.0.1",
  "main": "dist/app.js",
  "repository": "git@github.com:code-logs/hit-counter",
  "author": "Jay Lee <jaylee.possible@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc",
    "serve": "NODE_ENV=development nodemon --watch src --exec 'node --inspect -r ts-node/register ./src/app.ts mode=development'",
    "start": "NODE_ENV=production nodemon --watch src --exec 'node --inspect -r ts-node/register ./src/app.ts mode=development'",
    "typecheck": "tsc --noEmit --esModuleInterop",
    "prettier": "prettier -w ./src/**/*",
    "eslint": "eslint ./src/**/*",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run typecheck",
      "eslint --cache --fix"
    ],
    "*.{ts,js,css,md,json}": "prettier --write"
  }
}
